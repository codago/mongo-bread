<% include partials/header %>


<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

  <h1>BREAD(Browse,Read,Edit,Add,Delete)</h1>
  <h2>Filters</h2>
  <form class="" action="/" method="get">

    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label"><input name="cek_string" type="checkbox" value="<%= query.string %>"> String  </label>
      <div class="col-sm-10">
        <input type="text" name="string" class="form-control" id="inputPassword" placeholder="String">

      </div>
    </div>
    <label for="inputPassword" class="col-sm-2 control-label"><input name="cek_integer" type="checkbox" value="<%= query.integer %>">Integer  </label>
    <div class="col-sm-10">
      <input type="text" name="integer"class="form-control" id="inputPassword" placeholder="Integer">
    </div>
    <label for="inputPassword"class="col-sm-2 control-label"><input name="cek_float" type="checkbox" value="<%= query.float %>">Float  </label>
    <div class="col-sm-10">
      <input type="text" name="float"class="form-control" id="inputPassword" placeholder="Float">
    </div>
    <label for="inputPassword" class="col-sm-2 control-label"><input name="cek_date" type="checkbox" value="<%= query.date %>">Date  </label>
    <div class="col-sm-10">
      <input type="date" name="date" class="form-control" id="inputPassword" placeholder="Date">
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label"><input name="cek_boolean" type="checkbox" value="<%= query.boolean %>">Boolean </label>
      <div class="col-sm-10">
        <select name="boolean" class="form-control">
          <option class="form-control" value="true">True</option>
          <<option class="form-control" value="false">False</option>
        </select>

      </div>
    </div>

    <input type="submit" class="btn btn-primary" name="" value="submit">

  </form>
  <table class="table table-bordered">
    <tr>
      <th>ID</th>
      <th>String</th>
      <th>Integer</th>
      <th>Float</th>
      <th>Date</th>
      <th>Boolean</th>
      <th>Actions</th>
    </tr>

    <% for(var i=0; i<data.length; i++) {%>
      <tr>
        <td><%= data[i]._id %></td>
        <td><%= data[i].string %></td>
        <td><%= data[i].integer %></td>
        <td><%= data[i].float %></td>
        <td><%= data[i].date %></td>
        <td><%= data[i].boolean%></td>

        <td><a href='edit/<%= data[i]._id %>' class="btn btn-success"> Edit </a> &nbsp;
          <a href= 'delete/<%= data[i]._id%>' class ="btn btn-danger" onclick="return confirm('Asli nih ');" > Delete </button></td>
          </td>

        </tr>
        <% } %>
      </table>

      <!-- pagination -->
      <ul class="pagination">
        <% if(halaman > 1){ %>
          <li><a href="<%= `${get_link}page=${halaman-1}` %>">Previous</a></li>
          <%}%>
          <% for(let i=1; i<=jumlahHalaman; i++){  %>
            <li<%= (halaman==i) ? " class=active" : "" %> ><a href="<%= `${get_link}page=${i}` %>"><%=i%></a></li>
            <% }%>
            <% if(halaman<jumlahHalaman){ %>
              <li><a href="<%= `${get_link}page=${halaman+1}` %>">Next</a></li>
              <%}%>
            </ul>

            <br>
          </div>
        </div>

        <a style=="button" class="btn btn-primary" href="add">Add</a>

      </body>
      </html>


      <% include partials/footer %>
