<% include partials/header %>

    <h1>EDIT DATA</h1>
    <style>
    h1 {text-align: center;}
    </style>
      <h1>CRUD (Create - Read - Update - Delete)</h1>
      <br>

      <div class="container">
        <div class="jumbotron">
        <div class="panel">
          <div class="panel-heading">
          </div>

    <div id=menu>
      <a class="btn btn-success" href="/">Home</a>

<br>
<br>


<form class="form-horizontal" method="post">
 <div class="form-group">
   <label class="control-label col-sm-2" for="string">String:</label>
   <div class="col-sm-10">
     <input type="string" name = "string" value="<%=item.string%>" required>
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="integer">Integer:</label>
   <div class="col-sm-10">
     <input type="integer" step="1" name = "integer" step="1" value="<%= item.integer %>" required>
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="float">Float:</label>
   <div class="col-sm-10">
     <input type="float" class="form-control" name="float" step="0.01" value="<%= item.float %>" required>
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="date">Date:</label>
   <div class="col-sm-10">
     <input type="date" class="form-control" name="date" value="<%= item.date %>" required>
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="Boolean">Boolean:</label>
   <div class="col-sm-10">
     <select name="boolean" class="form-control">
       <option value="true"<%= item.boolean == "True" ? 'selected':'' %>>true</option>
     <option value="false"<%= item.boolean == "false" ? 'selected':'' %>>false</option>
     </select>
   </div>
 </div>
 <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button type="submit" value = "Update" class="btn btn-primary">Update</button> <br>
   </div>
 </div>
</form>

<% include partials/footer %>
